{
  "extends": "@guardian/tsconfig/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "checkJs": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.js", "**/*.mjs"],
  "exclude": ["node_modules", "**/*.config.js", "target", "./eslint.config.mjs"]
}
